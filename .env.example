# ========================================
# LINE LIFF Configuration
# ========================================
# Get from LINE Developers Console: https://developers.line.biz/
# Create a LINE Channel -> LIFF App -> Copy LIFF ID and Channel Access Token

# LIFF App ID from LINE Developers Console
NEXT_PUBLIC_LIFF_ID=1234567890-AbcdEfgh

# Channel Access Token for LINE Messaging API
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token

# ========================================
# Supabase Configuration
# ========================================
# Get from Supabase Project Settings: https://supabase.com/dashboard/project

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key (Public - can be exposed in frontend)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key (Secret - server-side only)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ========================================
# Application Configuration
# ========================================

# Application URL (for production deployment)
NEXT_PUBLIC_APP_URL=https://your-app-domain.com

# Node Environment (development | production)
NODE_ENV=development

# ========================================
# Feature Configuration
# ========================================

# Enable/Disable specific features
NEXT_PUBLIC_ENABLE_CALCULATOR=true
NEXT_PUBLIC_ENABLE_ADMIN_PANEL=true
NEXT_PUBLIC_ENABLE_MARKET_COMPARISON=true

# Database Configuration for Supabase Client SDK
NEXT_PUBLIC_SUPABASE_PROJECT_ID=your_project_id

